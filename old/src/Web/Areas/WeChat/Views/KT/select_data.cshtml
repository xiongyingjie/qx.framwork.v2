@{
    Layout = ViewData["Layout"].ToString();
}
@section scripts{
    <script type="text/javascript">
        function submit(index) {
            location.href = "@Url.Action("input_person_number")"+"?id=@ViewData["id"]-"+index;
          
        }
    </script>
}
<div class="weui-panel weui-panel_access">
    <div class="weui-panel__hd">选择日期</div>
    <div class="weui-grids">
        @{
            var curent = DateTime.Now;
            var end = curent.AddDays(15);
            while (curent < end)
            {
                curent = curent.AddDays(1);
                <a href="javascript:submit('@curent.EncodeingTime()');" class="weui-grid">
                    <div class="weui-grid__icon">
                        <img src="~/Content/Wx/example/images/icon_nav_msg.png" />
                    </div>
                    <p class="weui-grid__label">
                        @curent.ToShortDateString()
                        <br/>
                        (可预约)
                    </p>
                </a>
            }

        }


        <div class="weui-panel__ft">
            <a href="javascript:void(0);" class="weui-cell weui-cell_access weui-cell_link">
                <div class="weui-cell__bd">想预约更久之后的日期？</div>
                <span class="weui-cell__ft"></span>
            </a>
        </div>
    </div>
</div>
