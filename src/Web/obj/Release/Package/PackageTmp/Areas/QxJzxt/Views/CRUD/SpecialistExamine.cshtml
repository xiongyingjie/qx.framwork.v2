

@using Qx.Tools.Web.Mvc.Html
@model Web.Areas.QxJzxt.ViewModels.CRUD.SpecialistExamine_M

@{
    Layout = ViewData["Layout"].ToString();
}


<div class="row">
    @if (Model.data.Count == 0)
    {
        <div class="form-group col-lg-4">
            <label>暂无初审通过名单</label>
         @*   <input class="form-control" id="item_attrname" name="attrValue" placeholder="" type="text" value="@item.userid" readonly="readonly">*@
            <p class="help-block">&nbsp;</p>
        </div>
    }
    else
    {
        <div class="col-md-12">
            <div class="col-md-12">
                <!-- BEGIN SAMPLE FORM PORTLET-->
                <div class="portlet ">
                    <div class="portlet-body form">
                        <form class="form-horizontal" method="POST" role="form">
                            <input type="hidden" name="" value="@Model.batchinstanceid">
                            <div class="form-body">
                                @foreach (var item in Model.data)
                                {
                                    <div>
                                        <input type="hidden" name="applyid" value="@item.applyid">
                                        <div class="form-group col-lg-4">
                                            <label>学号</label>
                                            <input class="form-control" id="item_attrname" name="attrValue" placeholder="" type="text" value="@item.userid" readonly="readonly">
                                            <p class="help-block">&nbsp;</p>
                                        </div>

                                        <div class="form-group col-lg-4">
                                            <label>姓名</label>
                                            <input class="form-control" id="item_attrname" name="attrValue" placeholder="" type="text" value="@item.name" readonly="readonly">
                                            <p class="help-block">&nbsp;</p>
                                        </div>

                                        <div class="form-group col-lg-4">
                                            <label>分数</label>
                                            <input class="form-control" id="item_attrname" name="score" placeholder="" type="text" value="">
                                            <p class="help-block">&nbsp;</p>
                                        </div>
                                    </div>
                                }
                            </div>

                            <div class="form-actions fluid">
                                <div class="col-md-offset-5 col-md-8">
                                    @*<a onclick="sort()" class="btn btn-success">排序</a>*@
                                    <button type="submit" class="btn btn-success">提交</button>
                                    <button type="button" class="btn btn-de fault back">返回</button>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>


        </div>
    }
</div>
<script>
    function sort() {

        var inputlist = document.getElementsByName("score");
        var a = new Array(inputlist.length);
        for (var i = 0; i < inputlist.length; i++) {
            if (inputlist[i].value == "") {
                alert("请将所有分数填写完整");
                break;
            }
        }
        for (var i = 0; i < inputlist.length; i++) {
            a[i] = inputlist[i].value;
        }
        console.log(a.sort());
        for (var j = 0; j < a.length; j++) {
            for (var i = 0; i < inputlist.length; i++) {
                if (inputlist[i].value == a[j]) {
                    console.log(inputlist[i].name);
                  $(this).parents("div").siblings().children(".ordernum").val(a.length - j);
                }
            }
        }

    }
</script>