
@section scripts{
<script type="text/javascript">
    $(document).ready(function () {
        getChart(1);
        $("button").click(function () {
            $(".disabled").removeClass("disabled");
            $(this).addClass("disabled");
            var numType = $(this).attr("id");
            if (numType == "twoHour") { getChart(1); }
            else if (numType == "threeHour") { getChart(2); }
            else if (numType == "fourHour") { getChart(3); }
            else if (numType == "sixHour") { getChart(4); }
            else if (numType == "eightHour") { getChart(5); }
        });
    });
    function getDateTwelve() {
        var xData = ['00:00-2:00', '2:00-4:00', '4:00-6:00', '6:00-8:00', '8:00-10:00', '10:00-12:00', '12:00-14:00', '14:00-16:00', '16:00-18:00', '18:00-20:00', '20:00-22:00', '22:00-24:00'];
        var motorData = [3, 8, 22, 55, 100, 20, 150, 180, 200, 400, 50, 10];
        var trainData = [5, 9, 11, 22, 30, 100, 500, 200, 100, 50, 20, 10];
        var busData = [8, 40, 191, 234, 290, 330, 310, 255, 100, 40, 20, 10];
        var airportData = [55, 88, 40, 100, 190, 330, 410, 200, 210, 100, 10, 5];
        var myObj = new Array(xData, motorData, trainData, busData, airportData);
        return myObj;
    }
    function getDateEight() {
        var xData = ['00:00-3:00', '3:00-6:00', '6:00-9:00', '9:00-12:00', '12:00-15:00', '15:00-18:00', '18:00-21:00', '21:00-24:00'];
        var motorData = [3, 8, 22, 55, 100, 20, 150, 180];
        var trainData = [5, 9, 11, 22, 30, 100, 500, 200];
        var busData = [8, 40, 191, 234, 290, 330, 310, 255];
        var airportData = [55, 88, 40, 100, 190, 330, 410, 200];
        var myObj = new Array(xData, motorData, trainData, busData, airportData);
        return myObj;
    }
    function getDateSix() {
        var xData = ['00:00-4:00','4:00-8:00',  '8:00-12:00', '12:00-16:00','16:00-20:00', '20:00-24:00'];
        var motorData = [3, 8, 22, 55, 100, 20];
        var trainData = [5, 9, 11, 22, 30, 100];
        var busData = [8, 40, 191, 234, 290, 330];
        var airportData = [55, 88, 40, 100, 190, 330];
        var myObj = new Array(xData, motorData, trainData, busData, airportData);
        return myObj;
    }
    function getDateFour() {
        
        var xData = ['00:00-6:00', '6:00-12:00', '12:00-18:00', '18:00-24:00'];
        var motorData = [3, 8, 22, 55];
        var trainData = [5, 9, 11, 22];
        var busData = [8, 40, 191, 234];
        var airportData = [55, 88, 40, 100];
        var myObj = new Array(xData, motorData, trainData, busData, airportData);
        return myObj;
    }
    function getDateThree() {
        var xData = ['00:00-8:00', '8:00-16:00','16:00-24:00'];
        var motorData = [3, 8, 22];
        var trainData = [5, 9, 11];
        var busData = [8, 40, 191];
        var airportData = [55, 88, 40];
        var myObj = new Array(xData, motorData, trainData, busData, airportData);
        return myObj;
    }
      
    function getChart(num) { // 基于准备好的dom，初始化echarts实例
            var myChart = echarts.init(document.getElementById('main'));
            var locationType = ['动车站', '火车站', '汽车站', '机场'];
            var num = num;
            if (num == 1) { var obj = getDateTwelve(); }
            else if (num == 2) { var obj = getDateEight(); }
            else if (num == 3) { var obj = getDateSix(); }
            else if (num == 4) { var obj = getDateFour(); }
            else if (num == 5) { var obj = getDateThree(); }
            // 指定图表的配置项和数据
            var option = {
                title: {
                    text: 'ECharts Demo'
                },
                tooltip: {
                    trigger: 'axis',
                    axisPointer: {            // 坐标轴指示器，坐标轴触发有效
                        type: 'shadow'        // 默认为直线，可选为：'line' | 'shadow'
                    }
                },
                legend: {
                    data: locationType
                },
                xAxis: {
                    type: 'category',
                    data: obj[0]
                },
                yAxis: {
                    type: 'value'
                },
                series: [{
                    name: '动车站',
                    type: 'bar',
                    data: obj[1]
                },
                {
                    name: '火车站',
                    type: 'bar',
                    data: obj[2]
                },
                {
                    name: '汽车站',
                    type: 'bar',
                    data: obj[3]
                },
                {
                    name: '机场',
                    type: 'bar',
                    data: obj[4]
                }]
            };

            // 使用刚指定的配置项和数据显示图表。
            myChart.setOption(option);
        }

       
   
    
</script>


}
 <!-- 为ECharts准备一个具备大小（宽高）的Dom -->
<div id="main" style="width: 85%; height: 768px;float:left;"></div>
<div style="float:left;padding:80px 0;width:10%;text-align:center;">
    <p>请选择展示区间</p><br />
    <button type="button" class="btn btn-default disabled" id="twoHour">2小时</button><br />
    <button type="button" class="btn btn-default" id="threeHour">3小时</button><br />
    <button type="button" class="btn btn-default" id="fourHour">4小时</button><br />
    <button type="button" class="btn btn-default" id="sixHour">6小时</button><br />
    <button type="button" class="btn btn-default" id="eightHour">8小时</button>
</div>
