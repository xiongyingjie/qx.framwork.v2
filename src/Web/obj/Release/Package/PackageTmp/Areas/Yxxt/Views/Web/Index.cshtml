            GoodName: $(o).children("#goodname").attr("value"),
            GoodDes: $(o).children("#des").attr("value"),
            GoodPrice: $(o).children("#price").attr("value"),
            GoodType: $(o).children("#type").attr("value"),
            GoodLab: $(o).children("#lab").attr("value"),
            GoodOutline: $(o).children("#outline").attr("value"),
            GoodPic: $(o).children("#pic").attr("value"),
            GoodMaxPrice: $(o).children("#maxprice").attr("value"),
        };
