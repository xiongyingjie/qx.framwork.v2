@model Web.Areas.Yxxt.ViewModels.EChart2_M
@section scripts{
    <script type="text/javascript">
    $(document).ready(function () {
        getChart();
    });
    function getDateTwelve() {
        var xData = ['第一天', '第二天', '第三天', '第四天', '第五天', '第六天', '第七天'];
        var motorData = [3, 8, 22, 55, 100, 20, 150];
        var trainData = [5, 9, 11, 22, 30, 100, 500];
        var busData = [8, 40, 191, 234, 290, 33, 20];
        var airportData = [55, 88, 40, 100, 190, 330, 410];
        var myObj = new Array(xData, motorData, trainData, busData, airportData);
        return myObj;
    }
 
    function getChart() { // 基于准备好的dom，初始化echarts实例
            var myChart = echarts.init(document.getElementById('main'));
            var locationType = ['动车站', '火车站', '汽车站', '机场'];
            var obj = getDateTwelve();
            // 指定图表的配置项和数据
            var option = {
                title: {
                    text: 'ECharts Demo'
                },
                tooltip: {
                    trigger: 'axis',
                    axisPointer: {            // 坐标轴指示器，坐标轴触发有效
                        type: 'shadow'        // 默认为直线，可选为：'line' | 'shadow'
                    }
                },
                legend: {
                    data: locationType
                },
                xAxis: {
                    type: 'category',
                    data: obj[0]
                },
                yAxis: {
                    type: 'value'
                },
                series: [{
                    name: '动车站',
                    type: 'bar',
                    data: obj[1]
                },
                {
                    name: '火车站',
                    type: 'bar',
                    data: obj[2]
                },
                {
                    name: '汽车站',
                    type: 'bar',
                    data: obj[3]
                },
                {
                    name: '机场',
                    type: 'bar',
                    data: obj[4]
                }]
            };

            // 使用刚指定的配置项和数据显示图表。
            myChart.setOption(option);
        }
    </script>


}
<!-- 为ECharts准备一个具备大小（宽高）的Dom -->
<div style="margin:0 auto; padding:30px 0;width:35%;text-align:center;">
    @Html.TimeFor(o => o.BeginTime, "")
</div>
<div id="main" style="width: 100%; height: 768px;"></div>

<div style="clear:both;"></div>
<a href="http://echarts.baidu.com/examples.html">点击查看样式大全</a>
