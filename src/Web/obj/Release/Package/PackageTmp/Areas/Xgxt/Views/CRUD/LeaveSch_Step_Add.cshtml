@using Qx.Tools.Web.Mvc.Html
@model Web.Areas.Xgxt.ViewModel.LeaveSch_Step_Add_M
@{
    Layout = ViewData["Layout"].ToString();
}
@section scripts{
    <script type="text/javascript">
        $(function () {
            getStep_Name();
        });
        function getStep_Name() {
            $("#Step_Name,#LeaveSch_Batch_ID").keyup(function () {
                var Step_Name = $("#Step_Name").val().toString();
                var LeaveSch_Batch_ID = $("#LeaveSch_Batch_ID").val().toString();
                $("#chooseFuStep2").attr('href', '/Xgxt/admin/FatherStepChoose?AllParams=' +Step_Name + ";" + LeaveSch_Batch_ID);
            })
        }
    </script>
}
@Html.HiddenFor(o => o.LeaveSch_Step_ID)
@Html.InputFor(o => o.Step_Name)
@Html.InputFor(o => o.LeaveSch_Batch_ID)
@Html.InputFor(o => o.Father_LeaveSch_Step_ID)
<a id="chooseFuStep2" href="/Xgxt/admin/FatherStepChoose?AllParams=@Model.Step_Name+;+@Model.LeaveSch_Batch_ID">选择父步骤</a>
