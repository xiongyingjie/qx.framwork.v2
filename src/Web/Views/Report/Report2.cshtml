    Session["ReturnUrl"] = (Context.Request.RawUrl);

}
@model List<List<string>>

@{
   
    var ExtraParam = (string)ViewData["ExtraParam"];

    var header = Model[0];
    Model.Remove(header);
    var body = Model;

    if (body.Count == 0)
    {
        header = header.Take(header.Count - 1).ToList();
    }

    //body = body.Select(a => a.Take(a.Count - 1).ToList()).ToList(); ;


    //ViewData["Title"] = "报表";
