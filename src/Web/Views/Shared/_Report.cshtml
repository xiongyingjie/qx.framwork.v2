    var perCount =ViewData["perCount"];
    var pageIndex = ViewData["pageIndex"];
    var showDeafultButton = ViewData["showDeafultButton"];
    var area = "";
}

@Html.Action("Report", "Report", new {
    dataSource = dataSource,
    AddLink = AddLink,
    Title = Title,
