                @foreach (var item in Model.Navbars)
                {
                    if (!item.IsParent && item.ParentId == "MRoot")
                    {
                        var action = item.Action.Replace(" ", "");
                        var controller = item.Controller.Replace(" ", "");
                        var area = item.Area.Replace(" ", "");
                        var url = "/" + area + "/" + controller + "/" + action + "";
                        var name = item.Name.Replace(" ", "");
                        var imageClass = item.ImageClass.Replace(" ", "");
                        <li><a href="@url"><i class="@imageClass"></i> @name</a></li>
                    }
                    else
                    {
                        if (item.IsParent)
                        {
                            <li>
                                <a href="#"><i class="@item.ImageClass"></i> @item.Name<span class="fa arrow"></span></a>
                                <ul class="nav nav-second-level">
                                    @foreach (var child in Model.Navbars.Where(p => p.ParentId == item.Id))
                                    {
                                        if (child.Controller == null)
                                        {
                                            <li><a href="#">@child.Name.Replace(" ", "")</a></li>
                                        }
                                        else
                                        {
                                            var action = child.Action.Replace(" ", "");
                                            var controller = child.Controller.Replace(" ", "");
                                            var area = child.Area.Replace(" ", "");
                                            var name = child.Name.Replace(" ", "");
                                            var url = "/" + area + "/" + controller + "/" + action + "";
                                            <li><a href="@url">@name</a></li>

                                        }
                                    }
                                </ul>
                            </li>
                        }
                    }
                }
