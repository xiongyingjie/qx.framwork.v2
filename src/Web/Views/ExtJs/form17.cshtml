        function genre_name(val) {
            return genres.queryBy(function(rec) {
                return rec.data.id == val;
            }).itemAt(0).data.genre;
        }

        function title_tagline(val, x, store) {
            return '<b>' + val + '</b><br>' + store.data.tagline;
        }


