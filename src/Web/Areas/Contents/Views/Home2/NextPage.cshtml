@{
    Layout = "/Areas/Contents/Views/Shared/_MyLayOut.cshtml";
    List<Qx.Contents.Entity.column_tempelate> columnTempelateList = ViewBag.columnTempelateList;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>基于内容的可配置门户首页管理子系统 </title>
    <script type="text/javascript" src="http://code.jquery.com/jquery-latest.js"></script>
    <link href="~/Content/EasyTable/jquery.edittable.css" rel="stylesheet" />
    <script src="~/Content/EasyTable/jquery.myeasytable.js"></script>
    @*<link href="~/Content/EasyTable/main.css" rel="stylesheet" />*@
    <script src="~/Content/EasyTable/nextpage.js"></script>

    <script src="~/Include/KindEditor/kindeditor-all-min.js"></script>
    <script src="~/Include/KindEditor/lang/zh-CN.js"></script>
</head>
<body>

    <h4><a href="#" class="btn btn-primary">继续配置</a> ->> <a href="#" id="new_ct" class="btn btn-primary">新建栏目模板</a> ->> <a href="#" id="view_ct" class="btn btn-primary">预览栏目模板</a> ->> <a href="/Contents/Home2/StartPage" id="view_ct" class="btn btn-primary">返回上一步</a></h4>
    <div id="hasDesignedTemplateList" style="width:80%">
        <h4 class="label label-info">已拥有的模板列表</h4>
        <table class="table table-striped table-hover " id="templatelist">
            <thead>
                <tr><th>模板名</th><th>操作</th></tr>
            </thead>
            <tbody>
                @foreach (var item in columnTempelateList)
                {
                    <tr>
                        <td>@item.column_tempelate_name</td>
                        <td>
                            <a href="/Contents/Home2/Index" target="_blank" class="btn btn-primary">预览</a>
                            <a href="#" class="btn btn-success" onclick="init_templatetable('@item.column_tempelate_id')">编辑</a>
                            <a href="#" class="btn btn-danger" onclick="del_temlatetable('@item.column_tempelate_id')">删除</a>


                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div id="new_templatetable" style="display:none">
        <span class="label label-info">新建栏目模板</span>
        <div id="newtemplatetable"></div>
        <a href="#" class="btn btn-success" id="sendJson_newtemplate" style="display:none">提交</a>
        <a href="#" class="btn btn-success" id="sendJson_edittemplate" style="display:none">保存</a>
        @*<a href="#" class="loadjson button" id="loadJson">Load JSON from textarea</a>*@
        <a href="#" class="btn btn-warning" id="back_toctlist">返回列表</a>
        <a href="#" class="btn btn-warning" id="reset_newtemplate">重置表格</a>
    </div>

</body>
</html>
