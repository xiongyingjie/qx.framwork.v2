@model Web.Areas.WeChat.ViewModels.BookTicket.OrderDetial_M
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, height=device-height, initial-scale=1, maximum-scale=1, user-scalable=no" />
    <meta charset="UTF-8">
    <title>订单详情</title>
    <link href="~/Areas/WeChat/Content/BookeTicket/css/public.css" rel="stylesheet" />
    <link href="~/Areas/WeChat/Content/BookeTicket/css/订单详情.css" rel="stylesheet" />
</head>
<body>
    <div class="header">
        <div class="headerL"><img src="~/Areas/WeChat/Content/BookeTicket/img/return-icon.png" /></div>

        <div class="headerM"><h3>订单详情</h3></div>
        <div class="headerR"></div>
    </div>

    <div class="content">
        <ul class="order">


            <li>
                <div class="top">
                    <h3>@Model.name</h3>
                    <p>@Model.traveldate</p>
                    <p>1张</p>
                </div>
                <div class="middle">
                    <h3>取票码:@Model.userticket</h3>
                    <h4>∨点击查看二维码</h4>
                    <div class="erweima">
                        <img src="~/Areas/WeChat/Content/BookeTicket/img/二维码.png" />
                    </div>
                    <p>联系电话:1234567</p>
                </div>
                <div class="bottom">
                @*    <h3>删除订单</h3>*@
                    <p>订单号:@Model.orderid</p>
                    <p>总价:¥@Model.price</p>
                </div>
            </li>

        </ul>




    </div>
    <script src="~/Areas/WeChat/Content/BookeTicket/js/jquery.min.js"></script>
    <script src="~/Areas/WeChat/Content/BookeTicket/js/订单详情.js"></script>
</body>
</html>

