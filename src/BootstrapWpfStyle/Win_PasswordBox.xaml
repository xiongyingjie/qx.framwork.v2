<Window x:Class="BootstrapWpfStyle.Win_PasswordBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="密码框" Height="500" Width="500">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="默认样式"></Label>
            <PasswordBox Margin="5" Password="PasswordBox"/>
            <PasswordBox Margin="5" Password="PasswordBox IsEnabled=False" IsEnabled="False"/>
            <Label Content="校验状态"></Label>
            <PasswordBox Margin="5" Password="PasswordBox has-success" Style="{StaticResource has-success}"/>
            <PasswordBox Margin="5" Password="PasswordBox has-warning" Style="{StaticResource has-warning}"/>
            <PasswordBox Margin="5"  Password="PasswordBox has-error" Style="{StaticResource has-error}"/>
            <Label Content="控件尺寸"></Label>
            <PasswordBox Margin="5"  Password="PasswordBox input-sm" Style="{StaticResource input-sm}"/>
            <PasswordBox Margin="5"  Password="PasswordBox input-lg" Style="{StaticResource input-lg}"/>
        </StackPanel>
    </Grid>
</Window>
