<Window x:Class="BootstrapWpfStyle.Win_ProgressBar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="进度条" Height="300" Width="500">
    <Grid>
        <StackPanel Margin="10">
            <ProgressBar Value="20" Style="{DynamicResource progress-bar}" Margin="5"></ProgressBar>
            <ProgressBar Value="40" Style="{DynamicResource progress-bar-success}" Margin="5"></ProgressBar>
            <ProgressBar Value="60" Style="{DynamicResource progress-bar-info}" Margin="5"></ProgressBar>
            <ProgressBar Value="80" Style="{DynamicResource progress-bar-warning}" Margin="5"></ProgressBar>
            <ProgressBar Value="100" Style="{DynamicResource progress-bar-danger}" Margin="5"></ProgressBar>
        </StackPanel>
    </Grid>
</Window>
