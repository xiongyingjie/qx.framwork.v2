<Window x:Class="BootstrapWpfStyle.Win_TextBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="输入框" Height="500" Width="500">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="默认样式"></Label>
            <TextBox Margin="10,5" Text="TextBox"/>
            <TextBox Margin="10,5" Text="TextBox IsReadOnly=True" IsReadOnly="True"/>
            <TextBox Margin="10,5" Text="TextBox IsEnabled=False" IsEnabled="False"/>
            <Label Content="校验状态"></Label>
            <TextBox Margin="10,5" Text="TextBox has-success" Style="{StaticResource has-success}"/>
            <TextBox Margin="10,5" Text="TextBox has-warning" Style="{StaticResource has-warning}"/>
            <TextBox Margin="10,5"  Text="TextBox has-error" Style="{StaticResource has-error}"/>
            <Label Content="控件尺寸"></Label>
            <TextBox Margin="10,5"  Text="TextBox input-sm" Style="{StaticResource input-sm}"/>
            <TextBox Margin="10,5"  Text="TextBox input-lg" Style="{StaticResource input-lg}"/>
        </StackPanel>
    </Grid>
</Window>
